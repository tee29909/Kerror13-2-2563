@page
@model tbkkData.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<script>
                                document.getElementById("name").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
                                document.getElementById("name1").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname1").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position1").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
</script>
<div id="content-wrapper">
    <div class="container-fluid">
        <div class="alert alert-dark text-md-center font-weight-bold" role="alert">Delete Project</div>
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Management Cockpit</li>
            <li class="breadcrumb-item active">Project</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
        <div class="card">
            <br />
            <p class="text-center text-danger">Are you sure you want to delete this?</p>
            <hr />
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <p class="text-center">@Html.DisplayNameFor(model => model.Project.Name):@Html.DisplayFor(model => model.Project.Name)</p>
                            <p class="text-center">@Html.DisplayNameFor(model => model.Project.Cost):@Html.DisplayFor(model => model.Project.Cost)</p>
                        </div>
                        <div class="col">
                            <p class="text-center">@Html.DisplayNameFor(model => model.Project.Employee) : @Html.DisplayFor(model => model.Project.Employee.FirstName)</p>
                            <p class="text-center">@Html.DisplayNameFor(model => model.Project.CostGoal) : @Html.DisplayFor(model => model.Project.CostGoal)</p>
                        </div>
                    </div>
                </form>

                <form method="post">
                    <div style="text-align:center">
                        <input type="hidden" asp-for="Project.ProjectID" />
                        <button class="btn btn-danger btn-sm " type="submit" value="Delete">Delete</button>
                    </div>
                </form>

            </div>
        </div>
        <br />
    </div>
</div>

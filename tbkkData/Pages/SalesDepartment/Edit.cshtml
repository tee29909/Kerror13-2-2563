@page
@model tbkkData.Pages.SalesDepartment.EditModel

@{
    ViewData["Title"] = "Edit";
}


<script>
                                document.getElementById("name").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
                                document.getElementById("name1").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname1").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position1").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
</script>


<div id="content-wrapper">
    <div class="container-fluid">
        <div class="alert alert-dark text-md-center font-weight-bold" role="alert">Edit Customer</div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Management Cockpit</li>
            <li class="breadcrumb-item active">Sales Department</li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Customer.CustomerID" />

                    <div class="row">

                        <div class="col">
                            <label for="inputAddress">FirsName :</label>
                            <input asp-for="Customer.FirsName" class="form-control" id="inputFirsName" placeholder="FirsName">
                            <span asp-validation-for="Customer.FirsName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="inputLastName">LastName :</label>
                            <input asp-for="Customer.LastName" class="form-control" id="inputFirsName" placeholder="LastName">
                            <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label for="inputTelephone">Telephone :</label>
                            <input asp-for="Customer.Telephone" class="form-control" id="inputTelephone" placeholder="Telephone">
                            <span asp-validation-for="Customer.Telephone" class="text-danger"></span>

                        </div>
                        <div class="col">
                            <label for="inputEmail">Email :</label>
                            <input asp-for="Customer.Email" class="form-control" id="inputEmail" placeholder="Email" type="email">
                            <span asp-validation-for="Customer.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label for="inputAddress">Address :</label>
                            <input asp-for="Customer.Address" class="form-control" id="inputAddress" placeholder="Address">
                            <span asp-validation-for="Customer.Address" class="text-danger"></span>
                        </div>
                    </div><br />
                    <div class="form-group">
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <br />
    </div>
</div>




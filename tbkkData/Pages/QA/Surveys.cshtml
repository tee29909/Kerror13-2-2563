@page
@model tbkkData.Pages.QA.SurveysModel

@{
    ViewData["Title"] = "Surveys";
}
<script>
                                document.getElementById("name").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
                                document.getElementById("name1").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname1").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position1").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
</script>




<div id="content-wrapper">
    <div class="container-fluid">
        <div class="alert alert-dark text-md-center font-weight-bold" role="alert">Surveys Operators</div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Management Cockpit</li>
            <li class="breadcrumb-item active">Surveys Operators</li>
        </ol>
        <div class="card mb-3">
            <div class="card-header">
                <div class="dataTable_length">
                    <i class="fas fa-table"> Surveys Operators </i>
                    <div style="float: right">
                        <a asp-page="CreateSurveys" class="btn btn-success btn-sm float-right">Create Surveys Operators</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="text-center">

                                <th>@Html.DisplayNameFor(model => model.SurveyOperators[0].Date)</th>
                                <th>@Html.DisplayNameFor(model => model.SurveyOperators[0].Survey)</th>
                                <th>Type Survey</th>
                                <th>Survey Count</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SurveyOperators)
                            {
                                <tr class="text-center">

                                    <th>@Html.DisplayFor(modelItem => item.Date)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Survey.NameSurvey)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Type_Survey.TypeSurvey)</th>
                                    <th>@Html.DisplayFor(modelItem => item.SurveyCount)</th>

                                    <td>

                                        <a asp-page="./DetailsSurvey" asp-route-id="@item.SurveyOperatorsID" class="btn btn-outline-primary btn-sm">Details</a>
                                        <a asp-page="./DeleteSurvey" asp-route-id="@item.SurveyOperatorsID" class="btn btn-outline-danger btn-sm">Delete</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


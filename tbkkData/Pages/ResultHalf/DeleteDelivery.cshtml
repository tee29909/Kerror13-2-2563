@page
@model tbkkData.Pages.ResultHalf.DeleteDeliveryModel

@{
    ViewData["Title"] = "DeleteDelivery";
}
<script>
                                document.getElementById("name").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
                                document.getElementById("name1").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname1").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position1").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
</script>

<div id="content-wrapper">
    <div class="container-fluid">

        <div class="alert alert-dark text-md-center font-weight-bold" role="alert">Delete Delivery</div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Management Cockpit</li>
            <li class="breadcrumb-item active">Deliverys Performance</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
        <div class="card">
            <br />
            <p class="text-center text-danger">Are you sure you want to delete this?</p><hr />
            <div class="card-body">
                <form class="text-center">
                    <div class="row">
                        <div class="col">
                            <p>@Html.DisplayNameFor(model => model.Delivery_performance.Employee) : @Html.DisplayFor(model => model.Delivery_performance.Employee.FirstName) @Html.DisplayFor(model => model.Delivery_performance.Employee.LastName)</p>
                            <p>@Html.DisplayNameFor(model => model.Delivery_performance.Complains_Delivery):  @Html.DisplayFor(model => model.Delivery_performance.Complains_Delivery)</p>
                            <p>@Html.DisplayNameFor(model => model.Delivery_performance.Claim_Delivery) :  @Html.DisplayFor(model => model.Delivery_performance.Claim_Delivery)</p>
                        </div>
                    </div>
                </form>
                <form method="post">
                    <input type="hidden" asp-for="Delivery_performance.Delivery_performanceID" />
                    <div style="text-align:center">
                        <button type="submit" value="Delete" class="btn btn-danger btn-sm ">Delete</button>
                    </div>
                </form>
            </div>
        </div>
        <br />
    </div>
</div>


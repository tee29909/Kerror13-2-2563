@page
@model tbkkData.Pages.Rivals.DetailsRivalModel

@{
    ViewData["Title"] = "DetailsRival";
}
    <script>
                                document.getElementById("name").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
                                document.getElementById("name1").innerHTML = "@Model.Employees[0].FirstName.ToString()";
                                document.getElementById("lastname1").innerHTML = "@Model.Employees[0].LastName.ToString()";
                                document.getElementById("position1").innerHTML = "@Model.Employees[0].Position.PositionName.ToString()";
    </script>
    <div id="content-wrapper">
        <div class="container-fluid">
            <div class="alert alert-dark text-md-center font-weight-bold" role="alert"> Detail Product Rival</div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Management Cockpit</li>
                <li class="breadcrumb-item active">Rival</li>
                <li class="breadcrumb-item active">Detail</li>
            </ol>
            <div class="card mb-3">
                <div class="card-header">
                    <div class="dataTable_length">
                        <i class="fas fa-table">  Detail Product Rival </i>
                        <a asp-page="AddProductRival" asp-route-id="@Model.riv"type="button" class="btn btn-success btn-sm float-right">Add products</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="3">
                            <thead>
                                <tr class="text-center">
                                    <th>Name Product</th>
                                    <th>@Html.DisplayNameFor(model => model.Rival_Product[0].RivDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Rival_Product[0].Price)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var item in Model.Rival_Product)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.RivDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                        <td>
                                            <a asp-page="./UpdateRival" asp-route-id="@item.RivProductID"><button type="button" class="btn btn-outline-success btn-sm ">Update</button></a>
                                            <a asp-page="./DeleteProductRival" asp-route-id="@item.RivProductID"><button type="button" class="btn btn-outline-danger btn-sm">Delete</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
<div id="content-wrapper">
    <div class="container-fluid">

        <div class="alert alert-dark text-md-center font-weight-bold" role="alert">Delete Product Rival</div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Management Cockpit</li>
            <li class="breadcrumb-item active">Rival</li>
            <li class="breadcrumb-item active">Detail</li>
            <li class="breadcrumb-item active">Detete</li>
        </ol>
        <div class="card">
            <br />
            <p class="text-center text-danger">Are you sure you want to delete this?</p>
            <hr />
            <div class="card-body">
                <form class="text-center">
                    <div class="row">
                        <div class="col">
                            <p>@Html.DisplayNameFor(model => model.Rival_Product.Rival): @Html.DisplayFor(model => model.Rival_Product.Rival.Name)</p>
                            <p>@Html.DisplayNameFor(model => model.Rival_Product.Price): @Html.DisplayFor(model => model.Rival_Product.Price)</p>
                        </div>
                        <div class="col">
                            <p>@Html.DisplayNameFor(model => model.Rival_Product.RivDate) : @Html.DisplayFor(model => model.Rival_Product.RivDate)</p>
